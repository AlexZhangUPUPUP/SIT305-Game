  background-repeat: no-repeat;
  margin: 5px auto;
}

.grxx .fl{
  width: 300rpx;
  height: 150rpx;
  overflow: hidden;
  float: left;
  margin-top: 135rpx;
  margin-left: 30rpx;
}

.grxx .button{
  display: block;
  width: 70%;
  height: 40%;
  background-color: #D97D54;
  border-radius: 15rpx;
  line-height: 1.5em;
  font-size: 15px;
  color:white;
  text-align: center; 
}

.grxx image{
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 10rpx;
  float: left;
  margin-top: 125rpx;
  margin-left: 100rpx;
}

