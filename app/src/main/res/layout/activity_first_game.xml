<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".first_game">

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upButton"
        android:layout_alignStart="@+id/upButton"
        android:layout_marginStart="53dp"
        android:layout_marginTop="-2dp"
        app:srcCompat="@drawable/right2" />

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_below="@+id/upButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/down2" />

    <ImageView
        android:id="@+id/tankView"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="578dp"
        android:layout_marginTop="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tank1" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="93dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="43dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="47dp"
        android:layout_height="55dp"
        android:layout_below="@+id/backbutton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/up2" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:layout_below="@+id/upButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/left2" />

</RelativeLayout>